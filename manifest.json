{
	"manifest_version": 2,
	"name": "WebDeny",
	"version": "1.0",

	"description": "Stay productive and block frivolous websites.",
	"homepage_url": "http://github.com/Tuccinator/WebDeny",
	"icons": {
		"48": "icons/icon-48.png"
	},

	"permissions": [
		"activeTab",
		"storage",
		"tabs"
	],

	"browser_action": {
		"default_icon": "icons/icon-32.png",
		"default_title": "WebDeny",
		"default_popup": "popup.html"
	},

	"background": {
		"scripts": [
			"background.js"
		]
	},

	"applications": {
		"gecko": {
			"id": "webdeny@example.com"
		}
	},

	"content_scripts": [
		{
			"js": ["content_scripts/blocker.js"],
			"matches": ["*://*/"]
		}
	]
}